<% if @when != '' %>when = <%= @when %><% end -%>

# path to mongodump
mongodump = <%= mongodump %>

# mongouser (disable by default): Which user to authenticate to mongo as.
#mongouser = 
<% if @mongouser != '' %>mongouser = <%= @mongouser %><% end %>

# mongopass (disabled by default): password for authenticated user.
# mongopass =
<% if @mongouser != '' %>mongopass = <%= @mongopass %><% end %>

# Mongo DB to backup, leave empty for all dbs.
#mongodb =
<% if @mongodb != '' %>mongodb = <%= @mongodb %><% end %>

# Mongo collection to backup, leave empty for all collections.
#mongocollection =
<% if @collections != '' %>mongocollection = <%= @collections %><% end %>

# Target backup folder
backupdir = <%= @backupdir %>

# db host to backup (defaults to localhost)
dbhost = <%= @dbhost %>

